<h1>
  <% if @project.private %>
    <i class="fa fa-lock"></i>
  <% end %>

  <%= @project.title %></h1>

<div class="row">
  <div class="span8">
    <p><%= markdown @project.body %></p>
  </div>
  <div class="span4">
    <% if policy(@project).edit? %>
      <%= link_to "Edit", edit_project_path(@project), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>